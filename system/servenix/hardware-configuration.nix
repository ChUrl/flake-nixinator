      # libvdpau-va-gl # Taken from wiki
      # libvdpau # NOTE: Don't know if needed/where it belongs...
      # libva # NOTE: Don't know if needed/where it belongs...
    ];
  };

  powerManagement.cpuFreqGovernor = lib.mkDefault "powersave";
}
